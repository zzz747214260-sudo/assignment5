    </div>

    <!-- È¢ÑËßàÂå∫ iframe -->
    <iframe
      id="assign-frame"
      class="frame-wrapper"
      src="https://zzz747214260-sudo.github.io/homework/"
      title="Assignment frame"
    ></iframe>

  </div>

  <script>
    const buttons = document.querySelectorAll('.nav-btn');
    const frame = document.getElementById('assign-frame');
    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        buttons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        const url = btn.getAttribute('data-src');
        frame.src = url;
      });
    });
  </script>
